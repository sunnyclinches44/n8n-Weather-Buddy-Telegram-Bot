# Copy this file to .env and fill in real values
# Example values are placeholders.

# OpenAI API key used by the AI agent
OPENAI_API_KEY=sk-...

# OpenWeatherMap API key for fetching weather data
OPENWEATHER_API_KEY=abc123...

# Weather location in City,CountryCode format (e.g., Sydney,AU)
WEATHER_LOCATION=Sydney,AU

# Telegram bot credentials
TELEGRAM_BOT_TOKEN=123456:ABC...
TELEGRAM_CHAT_ID=-1001234567890

# Run mode: manual or schedule
RUN_MODE=manual

# Cron expression for scheduled runs (UTC)
SCHEDULE_CRON="0 8 * * *"
